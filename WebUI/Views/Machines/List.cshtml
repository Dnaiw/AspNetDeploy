@using AspNetDeploy.WebUI.Models
@model System.Collections.Generic.List<AspNetDeploy.WebUI.Models.MachineInfo>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">


    @foreach (MachineInfo machineInfo in Model)
    {
        <h1>
            <div class="row">
                <div class="col-md-10">
                    @Html.ActionLink(machineInfo.Name, "")
                </div>
                <div class="col-md-2 text-right">
                    <a href="@Url.Action("DownloadMachineInstance", "Machines", new{id = machineInfo.Id})"class="btn btn-default btn-lg">Download</a>
                </div>
            </div>
        </h1>
        <hr />

        <div class="row">
            <div class="col-md-7">
                <h4>
                    Roles

                    @foreach (string machineRole in machineInfo.Roles)
                    {
                        <small> @machineRole </small>
                    }

                </h4>

                <h4>
                    Environments

                    @foreach (string environment in machineInfo.Environments)
                    {
                        <small> @environment </small>
                    }
                </h4>
            </div>
            <div class="col-md-5 text-right">
                <h3>
                    <small>@machineInfo.Url</small>
                </h3>
            </div>
        </div>
        

    }

</div>
