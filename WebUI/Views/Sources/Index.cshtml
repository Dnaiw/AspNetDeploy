@using VisualStudioSolutionInfo
@using WebUI.Models

@{
    ViewBag.Title = "Index";
    ViewBag.PageClass = "sourcesPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @foreach (SourceControlInfo sourceControlInfo in this.ViewBag.SourceControlInfos)
    {
        <h1><small>SVN</small> @sourceControlInfo.SourceControl.Name </h1>
        <hr />

        IList<VisualStudioProject> visualStudioProjects = sourceControlInfo.Solutions.SelectMany(s => s.Projects).ToList();

        foreach (VisualStudioProject project in visualStudioProjects.Where(p => p.Type == VisualStudioProjectType.Web))
        {
            <div class="row project">
                <div class="col-sm-4">
                    <div class="name">
                        <img src="~/Resources/Layout/Images/Icons/VsWebProject.PNG" />
                        @project.Name
                    </div>
                </div>
            </div>
        }
    }

</div>



